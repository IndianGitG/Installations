version: '3'
services:
  db:
    image: mysql
    environment:
      MYSQL_ROOT_PASSWORD: password
  web:
    image: httpd
    ports:
      - "80:80"
    volumes:
      - ./html:/usr/local/apache2/htdocs
    depends_on:
      - db
  php:
    image: php:7.4-apache
    volumes:
      - ./html:/var/www/html
    depends_on:
      - db
